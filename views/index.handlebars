  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      
        <div class="nav navbar-header"> 
            <h3>Eat-Da-Burger!</h3>
        </div>
         
    </div>
  </nav>

  <div class="container" id="main-content"> 


    <div class="row">
      <h2>Add a Burger</h2>
    </div>
    <div class="row">
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Submit</button>
      </form>
    </div>



    <div class="row">
        <div class="col-sm-6">
            <div class="row" id="undevoured">
              <h2>Undevoured</h2>
              <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                
                <li>
                  <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="eaten" value="true">
                    <button type="submit">
                      {{this.burger_name}}
                    </button>
                  </form>
                </li>
                {{/unless}}
                {{/each}}
              </ul>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="row" id="devoured">
            <h2>Devoured</h2>
              <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>
                                    <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="eaten" value="false">
                    <button type="submit">
                      {{this.burger_name}}
                    </button>
                  </form>
                </li>
                {{/if}}
                {{/each}}
              </ul>
            </div>
        </div>
    </div>

  </div>     <!-- main-content ends -->
